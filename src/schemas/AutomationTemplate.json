{
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "steps": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/AutomationStep"
      }
    },
    "id": {
      "type": "string"
    },
    "_rev": {
      "type": "string"
    }
  },
  "required": [
    "id",
    "steps",
    "title"
  ],
  "definitions": {
    "AutomationStep": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "actions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AutomationAction<ActionImpl>"
          }
        },
        "transitions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AutomationTransition"
          }
        }
      },
      "required": [
        "actions",
        "enabled",
        "id",
        "title",
        "transitions"
      ]
    },
    "AutomationAction<ActionImpl>": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "impl": {
          "anyOf": [
            {
              "$ref": "#/definitions/BlockPatchImpl"
            },
            {
              "$ref": "#/definitions/TaskCreateImpl"
            }
          ]
        }
      },
      "required": [
        "enabled",
        "id",
        "impl",
        "title"
      ]
    },
    "BlockPatchImpl": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "BlockPatch"
          ]
        },
        "serviceId": {
          "type": [
            "string",
            "null"
          ]
        },
        "blockId": {
          "type": [
            "string",
            "null"
          ]
        },
        "blockType": {
          "type": [
            "string",
            "null"
          ]
        },
        "data": {
          "type": "null"
        }
      },
      "required": [
        "blockId",
        "blockType",
        "data",
        "serviceId",
        "type"
      ]
    },
    "TaskCreateImpl": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TaskCreate"
          ]
        },
        "ref": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      },
      "required": [
        "message",
        "ref",
        "title",
        "type"
      ]
    },
    "AutomationTransition": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "next": {
          "description": "true: next step\nfalse: exit process\nstring: step ID",
          "type": [
            "string",
            "boolean"
          ]
        },
        "enabled": {
          "type": "boolean"
        },
        "conditions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AutomationCondition<ConditionImpl>"
          }
        }
      },
      "required": [
        "conditions",
        "enabled",
        "id",
        "next"
      ]
    },
    "AutomationCondition<ConditionImpl>": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "impl": {
          "anyOf": [
            {
              "$ref": "#/definitions/TimeAbsoluteImpl"
            },
            {
              "$ref": "#/definitions/TimeElapsedImpl"
            },
            {
              "$ref": "#/definitions/BlockValueImpl"
            },
            {
              "$ref": "#/definitions/TaskStatusImpl"
            },
            {
              "$ref": "#/definitions/ManualAdvanceImpl"
            }
          ]
        }
      },
      "required": [
        "enabled",
        "id",
        "impl",
        "title"
      ]
    },
    "TimeAbsoluteImpl": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TimeAbsolute"
          ]
        },
        "time": {
          "anyOf": [
            {
              "description": "Enables basic storage and retrieval of dates and times.",
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "number"
            }
          ]
        }
      },
      "required": [
        "time",
        "type"
      ]
    },
    "TimeElapsedImpl": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TimeElapsed"
          ]
        },
        "duration": {
          "type": "number"
        }
      },
      "required": [
        "duration",
        "type"
      ]
    },
    "BlockValueImpl": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "BlockValue"
          ]
        },
        "operator": {
          "enum": [
            "eq",
            "ge",
            "gt",
            "le",
            "lt",
            "ne"
          ],
          "type": "string"
        },
        "serviceId": {
          "type": [
            "string",
            "null"
          ]
        },
        "blockId": {
          "type": [
            "string",
            "null"
          ]
        },
        "blockType": {
          "type": [
            "string",
            "null"
          ]
        },
        "key": {
          "type": [
            "string",
            "null"
          ]
        },
        "value": {
          "type": "null"
        }
      },
      "required": [
        "blockId",
        "blockType",
        "key",
        "operator",
        "serviceId",
        "type",
        "value"
      ]
    },
    "TaskStatusImpl": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "TaskStatus"
          ]
        },
        "ref": {
          "type": "string"
        },
        "status": {
          "$ref": "#/definitions/AutomationStatus"
        }
      },
      "required": [
        "ref",
        "status",
        "type"
      ]
    },
    "AutomationStatus": {
      "enum": [
        "Cancelled",
        "Created",
        "Done",
        "Interrupted",
        "Invalid",
        "Paused",
        "Started",
        "Unknown"
      ],
      "type": "string"
    },
    "ManualAdvanceImpl": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "ManualAdvance"
          ]
        },
        "desc": {
          "type": "string"
        }
      },
      "required": [
        "desc",
        "type"
      ]
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema#"
}