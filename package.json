{
    "name": "brewblox-automation",
    "version": "0.1.0",
    "description": "A persistent automation service for the BrewBlox framework",
    "repository": {
        "type": "git",
        "url": "https://github.com/BrewBlox/brewblox-automation"
    },
    "author": "BrewPi B.V.",
    "license": "GPL-3.0",
    "scripts": {
        "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run build:watch\" \"npm run serve:watch\"",
        "build": "tsc",
        "build:watch": "tsc -w",
        "serve": "node dist/server.js",
        "serve:watch": "nodemon --inspect dist/server.js",
        "test": "jest --detectOpenHandles --coverage --verbose",
        "test:watch": "npm run test -- --watchAll",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "compression": "^1.7.4",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "lodash": "^4.17.15",
        "pouchdb": "^7.1.1",
        "pouchdb-adapter-memory": "^7.1.1",
        "request": "^2.88.0",
        "request-promise-native": "^1.0.8"
    },
    "devDependencies": {
        "@types/body-parser": "^1.17.1",
        "@types/compression": "^1.0.1",
        "@types/concurrently": "^4.1.0",
        "@types/errorhandler": "0.0.32",
        "@types/eslint": "^6.1.3",
        "@types/express": "^4.17.2",
        "@types/jest": "^24.0.24",
        "@types/lodash": "^4.14.149",
        "@types/node": "^12.12.21",
        "@types/pouchdb": "^6.4.0",
        "@types/request": "^2.48.4",
        "@types/request-promise-native": "^1.0.17",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "concurrently": "^5.0.2",
        "eslint": "^6.7.2",
        "eslint-plugin-simple-import-sort": "^5.0.0",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "supertest": "^4.0.2",
        "ts-jest": "^24.2.0",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3"
    }
}
