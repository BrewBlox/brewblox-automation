    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "lodash": "^4.17.20",
    "minimist": "^1.2.5",
    "mqtt": "^4.2.1",
    "parse-duration": "^0.1.3",
    "pouchdb-adapter-memory": "^7.2.2",
    "shortid": "^2.2.15",
    "ts-node": "^8.10.2",
