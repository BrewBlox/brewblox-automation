{
  "name": "brewblox-automation",
  "version": "0.1.0",
  "description": "A persistent automation service for the BrewBlox framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/BrewBlox/brewblox-automation"
  },
  "author": "BrewPi B.V.",
  "license": "GPL-3.0",
  "scripts": {
    "schemas": "rm -rf src/schemas/*; ts-node schemas.ts",
    "build": "tsc",
    "serve": "node dist/server.js",
    "watch": "nodemon --watch 'src/**/*' --exec ts-node ./src/main.ts",
    "test": "jest --detectOpenHandles --coverage --verbose",
    "test:watch": "npm run test -- --watchAll",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet"
  },
  "dependencies": {
    "ajv": "^6.12.0",
    "amqplib": "^0.5.5",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-logger": "^3.2.1",
    "koa-router": "^8.0.8",
    "lodash": "^4.17.15",
    "minimist": "^1.2.0",
    "parse-duration": "^0.1.2",
    "pouchdb": "^7.2.1",
    "pouchdb-adapter-memory": "^7.2.1",
    "uuid": "^7.0.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/amqplib": "^0.5.13",
    "@types/eslint": "^6.1.8",
    "@types/jest": "^24.9.1",
    "@types/koa": "^2.11.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.0",
    "@types/lodash": "^4.14.149",
    "@types/minimist": "^1.2.0",
    "@types/node": "^12.12.29",
    "@types/pouchdb": "^6.4.0",
    "@types/supertest": "^2.0.8",
    "@types/uuid": "^7.0.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-plugin-simple-import-sort": "^5.0.1",
    "jest": "^25.1.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3",
    "typescript-json-schema": "^0.41.0"
  }
}
