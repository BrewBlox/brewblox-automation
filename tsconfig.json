{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*",
  ],
}
